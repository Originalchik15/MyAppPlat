<h2 class="mb-4">Список пользователей</h2>
<table class="table table-bordered table-striped align-middle shadow-sm">
  <thead class="table-light">
    <tr>
      <th>ID</th>
      <th>Имя</th>
      <th>Логин</th>
      <th>Роль</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <td>{{id}}</td>
        <td>{{first_name}}</td>
        <td>{{username}}</td>
        <td>{{role}}</td>
      </tr>
    {{else}}
      <tr><td colspan="4" class="text-center py-4">Пользователей нет</td></tr>
    {{/each}}
  </tbody>
</table>