<h2 class="mb-4">Новая заявка</h2>
<div class="card shadow-sm mb-5">
  <div class="card-body">
    <form class="row g-3" method="POST" action="/applications/create">
      <div class="col-md-4">
        <label class="form-label">Наименование товара</label>
        <input type="text" name="productName" class="form-control" required />
      </div>
      <div class="col-md-2">
        <label class="form-label">Количество</label>
        <input type="number" name="quantity" min="1" class="form-control" required />
      </div>
      <div class="col-md-2">
        <label class="form-label">Цена ₽</label>
        <input type="number" name="price" step="0.01" min="0" class="form-control" required />
      </div>
      <div class="col-md-4">
        <label class="form-label">Ссылка</label>
        <input type="url" name="link" class="form-control" placeholder="https://example.com" />
      </div>
      <div class="col-md-3">
        <label class="form-label">Желаемая дата</label>
        <input type="date" name="desiredDate" class="form-control" min="{{today}}" />
      </div>
      <div class="col-12 text-end">
        <button class="btn btn-success px-5" type="submit">Отправить</button>
      </div>
    </form>
  </div>
</div>

<h2 class="mb-3">Мои заявки</h2>
<table class="table table-striped table-bordered align-middle shadow-sm">
  <thead class="table-light">
    <tr>
      <th>ID</th>
      <th>Товар</th>
      <th>Кол-во</th>
      <th>Цена</th>
      <th>Ссылка</th>
      <th>Желаемая дата</th>
      <th>Создана</th>
      <th>Статус</th>
      <th>Комментарий менеджера</th>
      <th>Действие</th>
    </tr>
  </thead>
  <tbody>
    {{#each applications}}
      <tr>
        <td>{{id}}</td>
        <td>{{product_name}}</td>
        <td>{{quantity}}</td>
        <td>{{price}}</td>
        <td>{{#if link}}<a href="{{link}}" target="_blank">ссылка</a>{{/if}}</td>
        <td>{{desired_date_f}}</td>
        <td>{{creation_date_f}}</td>
        <td>{{status}}</td>
        <td>{{manager_comment}}</td>
        <td class="text-center">
          {{#if (and (ne status 'Завершен') (ne status 'Отмена'))}}
            <form method="POST" action="/applications/{{id}}/cancel">
              <button class="btn btn-outline-danger btn-sm" title="Отменить">✕</button>
            </form>
          {{/if}}
        </td>
      </tr>
    {{else}}
      <tr><td colspan="10" class="text-center py-4">Заявок нет</td></tr>
    {{/each}}
  </tbody>
</table>