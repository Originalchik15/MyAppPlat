<h2 class="mb-4">Архив заказов</h2>
<table class="table table-striped table-bordered align-middle shadow-sm">
  <thead class="table-light">
    <tr>
      <th>ID</th>
      <th>Пользователь</th>
      <th>Товар</th>
      <th>Кол-во</th>
      <th>Цена</th>
      <th>Сумма</th>
      <th>Ссылка</th>
      <th>Желаемая дата</th>
      <th>Предполагаемая дата</th>
      <th>Создана</th>
      <th>Комментарий</th>
      <th>Статус</th>
    </tr>
  </thead>
  <tbody>
    {{#each applications}}
      <tr>
        <td>{{id}}</td>
        <td>{{username}}</td>
        <td>{{product_name}}</td>
        <td>{{quantity}}</td>
        <td>{{price}}</td>
        <td>{{total_cost}}</td>
        <td>{{#if link}}<a href="{{link}}" target="_blank">ссылка</a>{{/if}}</td>
        <td>{{desired_date_f}}</td>
        <td>{{expected_delivery_f}}</td>
        <td>{{creation_date_f}}</td>
        <td>{{manager_comment}}</td>
        <td>{{status}}</td>
      </tr>
    {{else}}
      <tr><td colspan="12" class="text-center py-4">Архив пуст</td></tr>
    {{/each}}
  </tbody>
</table>